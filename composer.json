{
    "name": "vrnedwidek/php-decimal",
    "description": "An arbitrary-precision Decimal class type for PHP. Forked from Piggly and updated requirements to allow PHP 8.1 and PHP 8.2.",
    "keywords": [
        "piggly",
	"vrnedwidek",
        "decimal",
        "arbitrary",
        "precision",
        "arithmetic",
        "big",
        "number",
        "decimal",
        "float",
        "biginteger",
        "bigdecimal",
        "bignumber",
        "bigint",
        "bignum"
    ],
    "type": "library",
    "homepage": "https://github.com/vrnedwidek/php-decimal",
    "autoload": {
        "psr-4": {
            "Piggly\\Decimal\\": "src/"
        } 
    },
    "require": {
        "php": "^7.3 || ^8",
        "ext-bcmath": "^7.3 || ^8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Erik Nedwidek",
            "homepage": "https://github.com/vrnedwidek",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable"
}
